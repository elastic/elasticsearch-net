<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <DebugSymbols>True</DebugSymbols>
    <NoWarn>CAC001</NoWarn>
    <IsTestProject>False</IsTestProject>
  </PropertyGroup>

  <ItemGroup Condition="'$(TestPackageVersion)'!=''">
    <PackageReference Include="Elastic.Clients.Elasticsearch.JsonNetSerializer" Version="$(TestPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SolutionRoot)\tests\Tests.Domain\Tests.Domain.csproj" />
    <ProjectReference Include="$(SolutionRoot)\src\Elastic.Clients.Elasticsearch.JsonNetSerializer\Elastic.Clients.Elasticsearch.JsonNetSerializer.csproj" />  
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Elastic.Elasticsearch.Xunit" Version="0.3.0" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="JunitXml.TestLogger" Version="3.0.110" />
    <PackageReference Include="Nullean.VsTest.Pretty.TestLogger" Version="0.3.0" />
    <PackageReference Include="FluentAssertions" Version="5.10.3" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
    <PackageReference Include="DiffPlex" Version="1.4.1" />
    <PackageReference Include="Proc" Version="0.6.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" />
  </ItemGroup>
</Project>